# =============================================================================
# CV Matching Platform - Local Development Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
APP_NAME=CV Matching Platform
APP_VERSION=1.0.0
HOST=0.0.0.0
PORT=8000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECURITY_SECRET_KEY=your-super-secret-jwt-key-here-at-least-32-chars
SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS for local development
SECURITY_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000

# =============================================================================
# AZURE SERVICES (Required for production features)
# =============================================================================
# Azure AD
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret

# Azure Cosmos DB
AZURE_COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
AZURE_COSMOS_KEY=your-cosmos-primary-key
AZURE_COSMOS_DATABASE_NAME=CVDatabase

# Azure Cognitive Search
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_KEY=your-search-admin-key
AZURE_SEARCH_INDEX_NAME=cv-profiles

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-openai-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large

# Azure Service Bus
AZURE_SERVICE_BUS_NAMESPACE=your-servicebus-namespace
AZURE_SERVICE_BUS_KEY=Endpoint=sb://your-namespace.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your-key

# Azure Storage Account
AZURE_STORAGE_ACCOUNT_NAME=yourstorageaccount
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key
AZURE_STORAGE_CONTAINER_NAME=cv-documents

# Azure Document Intelligence
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-di-resource.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-document-intelligence-key

# Azure Key Vault (optional for local dev)
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# Redis (for caching and sessions)
DB_REDIS_URL=redis://localhost:6379/0
DB_REDIS_PASSWORD=
DB_REDIS_SSL=false
DB_REDIS_MAX_CONNECTIONS=20

# =============================================================================
# CACHE SETTINGS
# =============================================================================
CACHE_DEFAULT_TTL=3600
CACHE_SEARCH_TTL=300
CACHE_EMBEDDING_TTL=86400

# =============================================================================
# RATE LIMITING
# =============================================================================
SECURITY_RATE_LIMIT_REQUESTS=100
SECURITY_RATE_LIMIT_WINDOW=60

# =============================================================================
# DEVELOPMENT/TESTING OVERRIDES
# =============================================================================
# Set to true to use mock services for local development
USE_MOCK_SERVICES=false

# Disable certain features for local development
ENABLE_BACKGROUND_JOBS=false
ENABLE_WEBHOOKS=false
ENABLE_MONITORING=false